<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:background="#ff877f3d">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView44" android:layout_weight="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WiFi state:"
                  android:id="@+id/textViewMainWiFiState" android:textSize="22dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView43" android:layout_weight="1"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Turn ON"
                android:id="@+id/buttonMainWiFiTurnOn"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Turn OFF"
                android:id="@+id/buttonMainWiFiTurnOFF"  />
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView45"
              android:gravity="center" android:background="#ff536aaf" android:textColor="#fffaf9ff"
            />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Direct - Group Owner"
            android:id="@+id/buttonMainWFDGroupOwner" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Direct - Client"
            android:id="@+id/buttonMainWFDClient" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/textView21" android:gravity="center" android:background="#ff536aaf"
              android:textColor="#fffaf9ff"/>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="P2P/WFD Control Client"
            android:id="@+id/buttonMainP2PWFDClient" android:layout_gravity="center_horizontal"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="WiFi Control Client"
            android:id="@+id/buttonMainWiFiClient" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView26"
              android:gravity="center" android:background="#ff536aaf" android:textColor="#fffaf9ff"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relay"
            android:layout_gravity="center_horizontal" android:id="@+id/buttonMainRelay"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client"
            android:id="@+id/buttonMainClient" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView46"
              android:gravity="center" android:background="#ff536aaf" android:textColor="#fffaf9ff"
              android:layout_gravity="center_horizontal"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="WiFi-AP"
            android:id="@+id/buttonMainWiFiAP" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView15"
              android:gravity="center" android:background="#ff536aaf" android:textColor="#fffaf9ff"
              android:layout_gravity="center_horizontal"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Show info"
            android:id="@+id/buttonShowInfo" android:layout_gravity="center_horizontal"/>

</LinearLayout>