<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP"
                    android:id="@+id/buttonTcpUdp" android:layout_gravity="center_horizontal"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TextView android:layout_width="0px" android:layout_height="wrap_content" android:layout_weight="3"
                          android:text="CR Address:"
                          android:id="@+id/textView80"/>
                <EditText android:layout_width="0px" android:layout_height="wrap_content" android:layout_weight="5"
                          android:id="@+id/editTextCrIpAddress" android:text="192.168.49.1"/>
                <EditText android:layout_width="0px" android:layout_height="wrap_content" android:inputType="number"
                          android:ems="10" android:id="@+id/editTextCrPortNumber" android:text="30000"
                          android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="dest IP Address:" android:id="@+id/textView82" android:layout_weight="3"/>
                <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                          android:id="@+id/editTextDestIpAddress" android:text="192.168.1.77"
                          android:layout_weight="5"/>
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:inputType="number"
                          android:ems="10" android:id="@+id/editTextDestPortNumber" android:text="30000"
                          android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Buffer (KB):"
                        android:id="@+id/textView8" android:layout_weight="1"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editTextMaxBufferSize" android:text="1" android:layout_weight="1"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delay (ms):"
                        android:id="@+id/textView2" android:layout_weight="1"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1" android:id="@+id/editTextDelay" android:inputType="number"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bytes to send (KB):"
                        android:id="@+id/textView" android:gravity="center_vertical"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextTotalBytesToSend" android:text="0"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Transmitting"
                    android:id="@+id/buttonStartStopTransmitting" android:layout_gravity="center_horizontal"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="Sent Data (KB):"
                        android:id="@+id/textView3" android:layout_weight="1"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextThrdSentData" android:text="0" android:inputType="none"
                        android:editable="false" android:enabled="false" android:layout_weight="1"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:inputType="none" android:text="Rcv Data (KB):" android:id="@+id/textView10"
                          android:layout_weight="1"/>
                <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                          android:id="@+id/editTextThrdRcvData" android:text="0" android:inputType="none"
                          android:editable="false" android:enabled="false" android:layout_weight="1"/>
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:background="#9d0020b9" android:backgroundTint="#ff3f35af"
                    android:clickable="false"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server Receive Port Number:"
                        android:id="@+id/textView4"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editTextServerPortNumber" android:text="30000"/>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Receiving"
                    android:id="@+id/buttonStartStopServer" android:layout_gravity="center_horizontal"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="Rcv Data (KB):" android:id="@+id/textView5"
                          android:inputType="none" android:layout_weight="1"/>
                <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                          android:id="@+id/editTextRcvThrdRcvData" android:text="0" android:inputType="none"
                          android:editable="false" android:layout_weight="1"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="Sent Data (KB):" android:id="@+id/textView11" android:inputType="none"
                          android:layout_weight="1"/>
                <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                          android:id="@+id/editTextRcvThrdSentData" android:text="0" android:inputType="none"
                          android:editable="false" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>