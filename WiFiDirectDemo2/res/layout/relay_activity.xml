<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TCP"
                    android:id="@+id/buttonTcpUdp" android:layout_gravity="center_horizontal"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="CR Port Number:" android:id="@+id/textView6"/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
                          android:ems="10" android:id="@+id/editTextCrPortNumber" android:text="30000"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Buffer Max size (KB):" android:id="@+id/textView9"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"
                          android:ems="10" android:id="@+id/editTextCRMaxBufferSize" android:text="1"/>
            </LinearLayout>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Destination address"
                            android:textStyle="bold" android:layout_gravity="center_horizontal"
                            android:id="@+id/textView13" android:layout_weight="1"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:text="Next CR address"
                              android:textStyle="bold" android:layout_gravity="center_horizontal"
                              android:id="@+id/textView14" android:layout_weight="1"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView15" android:layout_weight="1"/>
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextLn1DestIP" android:layout_weight="1"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView16" android:layout_weight="1"/>
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextLn1CRelayIP" android:layout_weight="1"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView17" android:layout_weight="1"/>
                    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/editTextLn2DestIP" android:layout_weight="1"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView18" android:layout_weight="1"/>
                    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/editTextLn2CRelayIP" android:layout_weight="1"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView19" android:layout_weight="1"/>
                    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/editTextLn3DestIP" android:layout_weight="1"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="192.168.49."
                              android:id="@+id/textView20" android:layout_weight="1"/>
                    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/editTextLn3CRelayIP" android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Relaying"
                    android:id="@+id/buttonStartStop"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tx o->d (KB):"
                        android:id="@+id/textView7" android:textAlignment="center" android:textStyle="bold"
                        android:layout_gravity="center_horizontal" android:layout_weight="1"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0 Bytes"
                        android:id="@+id/textViewTransferedDataOrigDest" android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="Rx d->o (KB):" android:id="@+id/textView12" android:textAlignment="center"
                          android:textStyle="bold" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="0 Bytes"
                          android:id="@+id/textViewTransferedDataDestOrig" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>